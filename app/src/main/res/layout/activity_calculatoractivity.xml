            />
        <!--Delete-->
        <Button
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:id="@+id/chu"
            android:text="/"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingBottom="15sp"
            android:paddingRight="15sp"
            />
    </LinearLayout>
</LinearLayout>
